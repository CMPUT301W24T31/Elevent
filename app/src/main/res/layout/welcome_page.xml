<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001F3F">

    <ImageView
        android:id="@+id/elevent_logo"
        android:layout_width="206dp"
        android:layout_height="208dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/create_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/create_profile"
        android:layout_width="312dp"
        android:layout_height="77dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#00346A"
        android:fontFamily="@font/jetbrainsmono_bold"
        android:text="create profile"
        android:textSize="30dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/skip_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/skip_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:fontFamily="@font/jetbrainsmono_bold"
        android:text="skip for now"
        android:textAlignment="center"
        android:textColor="#FDFCFC"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/elevent_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/jetbrainsmono_bold"
        android:text="ELEVENT"
        android:textColor="#FDFCFC"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/elevent_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcome_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jetbrainsmono_bold"
        android:text="welcome to "
        android:textColor="#FDFCFC"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/elevent_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jetbrainsmono_bold"
        android:text="OR"
        android:textColor="#F4F1F1"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="679dp" />

    <TextView
        android:id="@+id/existing_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jetbrainsmono_bold"
        android:text="use exiting userID"
        android:textAlignment="center"
        android:textColor="#FAF7F7"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="712dp" />
</androidx.constraintlayout.widget.ConstraintLayout>