<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context=".EditProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/edit_profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/edit_profile_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit profile photo"
                android:layout_below="@id/edit_profile_image"
                android:textColor="@color/item_grey"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:clickable="true"
                android:focusable="true"/>
            <TextView
                android:id="@+id/delete_profile_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete profile photo"
                android:layout_below="@id/edit_profile_image"
                android:textColor="@color/item_grey"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:clickable="true"
                android:focusable="true"/>

            <EditText
                android:id="@+id/edit_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner"
                android:hint="@string/name"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_below="@id/edit_profile_photo_text" />

            <EditText
                android:id="@+id/edit_profile_homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:layout_marginTop="8dp"
                android:hint="@string/home_page"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_below="@id/edit_profile_name"/>

            <EditText
                android:id="@+id/edit_profile_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner"
                android:hint="@string/contact"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:layout_below="@+id/edit_profile_homepage"/>

            <Button
                android:id="@+id/save_edited_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_blue"
                android:text="@string/save"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/edit_profile_contact"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>