<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="@string/name"
                android:theme="@style/FontTheme"
                android:textColorHint="@color/text_white"/>

            <TextView
                android:id="@+id/profile_homepage"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:hint="@string/home_page"
                android:textColorHint="@color/text_white"
                android:theme="@style/FontTheme" />

            <TextView
                android:id="@+id/profile_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/contact"
                android:theme="@style/FontTheme"
                android:textColorHint="@color/text_white" />

            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/item_blue"
                android:fontFamily="monospace"
                android:text="@string/edit_profile"
                android:textColor="@color/background_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/admin_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you an admin?"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>