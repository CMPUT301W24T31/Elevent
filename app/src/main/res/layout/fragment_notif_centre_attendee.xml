<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue">
    <!--
    <include
        android:id="@+id/include2"
        layout="@layout/toolbar" />
                                    -->
    <TextView
        android:id="@+id/notif_centre_attendee_textview"
        android:layout_width="403dp"
        android:layout_height="717dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/item_grey"
        android:gravity="start"
        android:text="@string/notification_centree"
        android:textColor="@color/background_blue"
        android:theme="@style/FontTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_of_notifs"
        android:layout_width="370dp"
        android:layout_height="630dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/item_grey"
        android:fontFamily="monospace"
        android:text="@string/attendees"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:divider="@color/item_grey"
        android:dividerHeight="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>