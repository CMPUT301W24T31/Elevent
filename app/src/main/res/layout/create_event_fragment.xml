<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/event_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Name"
        android:textSize="20sp"
        android:text=""/>
    <EditText
        android:id="@+id/event_address_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Address"
        android:textSize="20sp"
        android:text=""/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_time_edit_text"
        android:ems="10"
        android:inputType="text"
        android:hint="Time"
        android:textSize="20sp"
        android:text=""/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_date_edit_text"
        android:ems="10"
        android:inputType="text"
        android:hint="Date"
        android:textSize="20sp"
        android:text=""/>
    <EditText
        android:id="@+id/event_description_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Event description"
        android:textSize="20sp"
        android:text=""/>
    <Button
        android:id="@+id/add_event_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:text="Add Event Poster"
        android:textSize="20sp"
        android:textColor="@color/background_blue"/>

</LinearLayout>